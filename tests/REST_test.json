    {
    "name":"buyCardScheme",
    "route": "http://localhost:1317/cardservice/buy_card_scheme",
    "reqBody": {
      "base_req": {
        "from":"%s",
        "chain_id":"testCardchain",
        "gas": "auto",
        "gas_adjustment": "1.5"
      },
      "amount":"991credits",
      "buyer":"%s"
    },
    "evaluate": [
      "sh getAliceAddress.sh",
      "sh getAliceAddress.sh"
    ],
    "method": "POST",
    "sign": "sh signAlice.sh",
    "broadcast": "cscli tx broadcast signedTx.json",
    "expected": {
      "required": ["value"],
      "properties": {
        "value": {
          "required": ["msg"],
          "properties": {
            "msg": {
              "items": {
                  "required": ["value"],
                  "properties": {
                    "value": {
                      "required": ["Buyer"]
                    }
                  }
                }
              }
            }
          }
        }
